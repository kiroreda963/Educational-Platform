@model Milestone__3.Models.PersonalizationProfileView

@{
    ViewData["Title"] = "Add Personalization Profile";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="LearnerId">Learner</label>
        <select asp-for="LearnerId" class="form-control" asp-items="ViewBag.Learners"></select>
    </div>
    <div class="form-group">
        <label for="PreferedContentType">Preferred Content Type</label>
        <input asp-for="PreferedContentType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="EmotionalState">Emotional State</label>
        <input asp-for="EmotionalState" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PersonalityType">Personality Type</label>
        <input asp-for="PersonalityType" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</form>
