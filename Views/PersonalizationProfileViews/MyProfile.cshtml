@model Milestone__3.Models.PersonalizationProfileView

@{
    ViewData["Title"] = "My Personalization Profile";
}

<h1>My Personalization Profile</h1>

<hr />

<div>
    <h4>Personalization Profile</h4>
    <dl class="row">
        <dt class="col-sm-2">Profile ID</dt>
        <dd class="col-sm-10">@Model.ProfileId</dd>

        <dt class="col-sm-2">Learner ID</dt>
        <dd class="col-sm-10">@Model.LearnerId</dd>

        <dt class="col-sm-2">Preferred Content Type</dt>
        <dd class="col-sm-10">@Model.PreferedContentType</dd>

        <dt class="col-sm-2">Emotional State</dt>
        <dd class="col-sm-10">@Model.EmotionalState</dd>

        <dt class="col-sm-2">Personality Type</dt>
        <dd class="col-sm-10">@Model.PersonalityType</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProfileId" class="btn btn-primary">Edit Profile</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
