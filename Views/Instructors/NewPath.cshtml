@model Milestone__3.Models.LearningPath

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Learning Path";
}

<style>
    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 2rem;
        color: #4A90E2;
        font-weight: bold;
        text-align: center;
        margin-bottom: 2rem;
    }

    label {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #4A90E2;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #3b7dc0;
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(74, 144, 226, 0.3);
        }
</style>

<div class="container">
    <h2>Add New Learning Path</h2>
    <form asp-action="NewPath" method="post">
        <input type="hidden" name="learnerId" value="@ViewBag.LearnerId" />

        <label for="profileId">Profile ID</label>
        <input type="number" class="form-control" name="profileId" required />

        <label for="customContent">Custom Content</label>
        <textarea class="form-control" name="customContent"></textarea>

        <label for="adaptiveRules">Adaptive Rules</label>
        <textarea class="form-control" name="adaptiveRules"></textarea>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Add Path</button>
        </div>
    </form>
</div>
