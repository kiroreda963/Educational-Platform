@{
    ViewData["Title"] = "Discussion Forum Actions";
}

<!-- Custom Styles -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #eef2f3, #8e9eab);
        color: #333;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    .container {
        margin-top: 100px;
    }

    .btn {
        font-size: 1.2rem;
        padding: 12px 25px;
        border-radius: 50px;
        margin: 10px;
        cursor: pointer;
        text-decoration: none;
        color: white;
    }

    .btn-view {
        background: linear-gradient(145deg, #6a11cb, #2575fc);
    }

    .btn-create {
        background: linear-gradient(145deg, #00c6ff, #0072ff);
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
    }

</style>

<!-- Page Content -->
<div class="container">
    <h1>Discussion Forum Options</h1>

    <div>
        <a href="@Url.Action("Index", "DiscussionForums")" class="btn btn-view">
            View Discussion Forums
        </a>
    </div>
    <div>
        <a href="@Url.Action("Create", "DiscussionForums")" class="btn btn-create">
            Create a Discussion Forum
        </a>
    </div>
</div>
