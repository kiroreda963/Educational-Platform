@model IEnumerable<Milestone__3.Models.DiscussionForum>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Discussion Forums";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discussion Forums</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .forums-container {
            width: 95%;
            max-width: 1200px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 30px;
            text-align: center;
            position: relative;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .page-title {
            color: #333;
            font-size: 1.8rem;
            margin: 0;
            text-align: left;
        }

        .forums-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .forums-table thead {
                background-color: #f0f4f8;
            }

            .forums-table th,
            .forums-table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #e6e9ee;
            }

            .forums-table th {
                color: #2c3e50;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9rem;
            }

            .forums-table tr:hover {
                background-color: #f9fbfc;
                transition: background-color 0.3s ease;
            }

        .forum-title {
            font-weight: 600;
            color: #3498db;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary {
            background-color: #3498db;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="forums-container">
        <div class="page-header">
            <h1 class="page-title">Discussion Forums</h1>
        </div>

        <table class="forums-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Last Active</th>
                    <th>Created On</th>
                    <th>Description</th>
                    <th>Module</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var forum in Model)
                {
                    <tr>
                        <td class="forum-title">@forum.Title</td>
                        <td>@forum.LastActive.ToString("MMM dd, yyyy")</td>
                        <td>@forum.Timestamp.ToString("MMM dd, yyyy")</td>
                        <td>@forum.Description</td>
                        <td>@forum.Module.ModuleId</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = forum.ForumId })" class="btn btn-primary">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="action-buttons">
            <a href="@Url.Action("Post", "DiscussionForums")" class="btn btn-primary">
                Create New Forum
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</body>
</html>