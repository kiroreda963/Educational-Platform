@model List<Milestone__3.Models.LearningPath>


@{
    Layout = null;
}
@{
    ViewData["Title"] = "Learning Paths";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #ece9e6, #ffffff);
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #4A90E2;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        overflow: hidden;
        border-radius: 10px;
    }

        .table th {
            background-color: #4A90E2;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 1.1rem;
        }

        .table td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            font-size: 1rem;
            color: #333;
        }

        .table tr:hover {
            background-color: rgba(74, 144, 226, 0.1);
            transition: background-color 0.3s ease-in-out;
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease-in-out;
    }

    .btn-info {
        background-color: #4A90E2;
        color: white;
        border: none;
    }

        .btn-info:hover {
            background-color: #3b7dc0;
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(74, 144, 226, 0.3);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.3);
        }

    .no-paths {
        font-size: 1.2rem;
        color: #6c757d;
        margin-top: 20px;
        text-align: center;
    }
</style>

<h1>Your Learning Paths</h1>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Path ID</th>
                        <th>Completion Status</th>
                        <th>Custom Content</th>
                        <th>Adaptive Rules</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var path in Model)
                    {
                        <tr>
                            <td>@path.PathId</td>
                            <td>@path.CompletionStatus</td>
                            <td>@path.CustomContent</td>
                            <td>@path.AdaptiveRules</td>
                            <td>
                                <a href="@Url.Action("LearningPathDetails", "Learners", new { pathId = path.PathId })" class="btn btn-info">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
}
else
{
    <div class="container">
        <p class="no-paths">No learning paths available.</p>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
}
