@model Milestone__3.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .profile-container {
            width: 95%;
            max-width: 1200px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 30px;
            text-align: center;
            position: relative;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: absolute;
            top: 20px;
            left: 20px;
            right: 20px;
        }

        .header-icons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-icon {
            color: #2c3e50;
            font-size: 1.3rem;
            cursor: pointer;
            transition: color 0.3s ease;
            position: relative;
        }

            .header-icon:hover {
                color: #3498db;
            }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #e74c3c;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
        }

        .profile-header {
            margin-top: 60px;
            margin-bottom: 20px;
        }

            .profile-header h1 {
                color: #333;
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

        .navigation-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 30px;
        }

        .nav-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: #f0f4f8;
            border-radius: 12px;
            padding: 20px;
            text-decoration: none;
            color: #2c3e50;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .nav-button:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

            .nav-button i {
                font-size: 2.5rem;
                margin-bottom: 10px;
                color: #3498db;
            }

            .nav-button span {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9rem;
            }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="page-header">
            <div class="header-icons">
                <a href="@Url.Action("Index", "Profile")" class="header-icon">
                    <i class="fas fa-user-circle"></i>
                </a>
                <a href="@Url.Action("ViewAllNotifications", "Account")" class="header-icon">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </a>
            </div>
        </div>

        <div class="profile-header">
            <h1>Welcome, @Model.FirstName @Model.LastName</h1>
        </div>

        <div class="navigation-grid">
            <a href="@Url.Action("ViewMyCourses", "Courses")" class="nav-button">
                <i class="fas fa-book-open"></i>
                <span>My Courses</span>
            </a>

            <a href="@Url.Action("Index", "StudentAssessments")" class="nav-button">
                <i class="fas fa-clipboard-check"></i>
                <span>Assessments</span>
            </a>

            <a href="@Url.Action("LearningPaths", "Account")" class="nav-button">
                <i class="fas fa-route"></i>
                <span>Learning Paths</span>
            </a>

            <a href="@Url.Action("AddGoal", "Learners")" class="nav-button">
                <i class="fas fa-bullseye"></i>
                <span>Goals</span>
            </a>

            <a href="@Url.Action("Index", "DiscussionForums")" class="nav-button">
                <i class="fas fa-comments"></i>
                <span>Discussion Forums</span>
            </a>
        </div>
    </div>
</body>
</html>