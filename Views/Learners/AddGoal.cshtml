@model IEnumerable<Milestone__3.Models.LearningGoal>

@{
    ViewData["Title"] = "Add Learning Goal";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #eef2f3, #8e9eab);
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2.5rem;
        color: #34495e;
        font-weight: bold;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .container {
        background: #ffffff;
        border-radius: 15px;
        padding: 30px;
        max-width: 800px;
        margin: auto;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
    }

    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th {
            background: #2C3E50;
            color: white;
            font-size: 1.2rem;
            padding: 10px;
            text-align: center;
        }

        .table td {
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .table tr:hover {
            background: rgba(0, 123, 255, 0.1);
            transition: background 0.3s;
        }

    .btn-success {
        background: linear-gradient(145deg, #28a745, #218838);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-warning {
        background: linear-gradient(145deg, #ffc107, #e0a800);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-warning:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

    .text-center {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h2>Add a Learning Goal</h2>

    <form asp-action="AddGoal" method="post">
        <input type="hidden" name="learnerId" value="@ViewBag.LearnerId" />

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Deadline</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in Model)
                    {
                        <tr>
                            <td>@goal.Description</td>
                            <td>@goal.Deadline?.ToString("yyyy-MM-dd")</td>
                            <td>
                                <button type="submit" name="goalId" value="@goal.Id" class="btn btn-success">Add Goal</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-action="DetailsGoals" asp-route-id="@ViewBag.LearnerId" class="btn btn-warning">Back to Goals</a>
        </div>
    </form>
</div>
